@model EditVM

@{
    var count = 1;
}

<form method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-lg-8">
            <div class="card p-3">
                <div class="tab-content" id="myTabContent">
         
                        <div class="tab-pane fade @(count == 1? "show active" : null)" id="home-1" role="tabpanel" aria-labelledby="home-tab">
                            <p>Heading</p>
                            <input class="form-control mb-2" name="Heading" value="@Model.Introduction.Heading" />
                            <p>Title</p>
                            <input class="form-control mb-2" name="Title" value="@Model.Introduction.Title" />
                            <p>Description</p>
                            <textarea id="editor-1" class="form-control mb-2" name="Description">@Model.Introduction.Description</textarea>
                        </div>
                  


                </div>
            </div>

        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <img class="img-fluid" src="@Model.Introduction.PhotoURL" />
                </div>
            </div>
            <div class="card p-3 mt-3">
                <input type="file" name="Image" />
            </div>
            <div class="card p-3 mt-3">
                <input class="btn btn-primary btn-sm" type="submit" value="Edit" />
            </div>
             
        </div>
    </div>



</form>


<script>
    ClassicEditor
            .create( document.querySelector('#editor-1') )
</script>


